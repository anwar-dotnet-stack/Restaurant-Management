@{
    ViewData["Title"] = "AccessDenied";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg p-4" style="border-radius: 20px;">
        <div class="card-body">
            <i class="fa fa-lock text-danger" style="font-size: 80px;"></i>
            <h2 class="mt-3 text-danger"> Access Denied</h2>
            <p class="text-muted fs-5 mt-2">
                Sorry, you do not have permission to access this page.
            </p>

            <div class="mt-4">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                    <i class="fa fa-home"></i> Return to Homepage
                </a>

                <a asp-action="login" asp-controller="User" class="btn btn-outline-secondary ms-2">
                    <i class="fa fa-sign-in"></i> Log In
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f9fafc;
    }
</style>