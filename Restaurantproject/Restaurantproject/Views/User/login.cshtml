@{
    ViewData["Title"] = "login";

}
@model loginAcc

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 text-primary">Login</h3>

@* عرض الأخطاء العامة القادمة من الكنترولر *@
@Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })

    <form style="padding:100px;" asp-action="login" asp-controller="User" role="form" enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="Email" asp-for="Email" class="form-label"></label>
        <input asp-for="Email" type="email" class="form-control" id="Email">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <label for="em1" asp-for="password" class="form-label">your Password</label>
        <input asp-for="password" type="password" class="form-control" id="em1">
        <span class="text-danger" asp-validation-for="password"></span>
    </div>


    <button type="submit" class="btn btn-primary w-100 rounded-3 mt-2"> login </button>

    <div class="text-center mt-3">
        <span>Don't have an account?</span>
        <a asp-action="Register" asp-controller="User" class="text-decoration-none">Create a new account</a>
    </div>

        <a class="btn btn-info" asp-action="Register" asp-controller="User"> Register</a>


</form>

                </div>
            </div>
        </div>
    </div>
</div>


